# Prism系统环境配置示例
# 复制此文件为.env并修改相应配置

# 基础配置
APP_NAME="Prism Stock Analysis System"
VERSION="1.0.0"
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=3005
SERVER_IP=35.77.54.203

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/prism_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# 股票数据API配置
STOCK_API_BASE_URL=http://35.77.54.203:3003
STOCK_API_TIMEOUT=10
STOCK_API_RETRY_TIMES=3

# AI Agent配置
AI_AGENT_POOL_SIZE=5
AI_AGENT_MAX_WORKERS=10
AI_AGENT_TIMEOUT=30

# 缓存配置
CACHE_TTL_STOCK_DATA=3600
CACHE_TTL_AI_RESPONSE=1800

# 任务配置
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=300
TASK_RETRY_TIMES=2

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 日志配置
LOG_LEVEL=INFO
LOG_ROTATION="100 MB"
LOG_RETENTION="30 days"